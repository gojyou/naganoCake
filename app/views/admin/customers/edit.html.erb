<h1><%= @customer.last_name %>さん情報編集画面</h1>
<%= form_with model:@customer,url: admin_customer_path, local:true do |t| %>
<table>
  <tr>
    <th>氏名</th>
    <td>　<%= t.text_field :last_name %> <%= t.text_field :first_name %></td>
  </tr>
   <tr>
    <th>カナ</th>
    <td><%= t.text_field :last_name_kana %> <%= t.text_field :first_name_kana %></td>
  </tr>
   <tr>
    <th>郵便番号</th>
    <td><%= t.text_field :postal_code %></td>
  </tr>
   <tr>
    <th>住所</th>
    <td><%= t.text_field :address %></td>
  </tr>
   <tr>
    <th>電話番号</th>
    <td><%= t.text_field :telephone_number %></td>
  </tr>
   <tr>
    <th>e-mail</th>
    <td><%= t.email_field :email %></td>
  </tr>
   <tr>
    <th>会員ステータス</th>
    <td><%= t.label :is_active,'有効', value: true %>
<%= t.radio_button :is_active, :true %>
<%= t.label :is_active, '退会', value: false %>
<%= t.radio_button :is_active, :false %></td>
  </tr>

</table>
<%= t.submit"更新" %>
<% end %>