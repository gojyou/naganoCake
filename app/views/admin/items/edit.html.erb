<h1>商品編集</h1>
<%= form_with model:@item,url:  admin_item_path(@item), local:true do |t| %>
<table>
  <tr>
    <th>商品名</th>
    <td><%= t.text_field :name %></td></tr>
    <tr><th>ジャンル</th>
    <td><%= t.label :genre_id %>
<%= t.collection_select :genre_id, Genre.all, :id, :name %></td></tr>
    <tr><th>イメージ</th>
    <td><%= t.attachment_field :image %></td></tr>
   <tr> <th>商品説明</th>
    <td><%= t.text_area :introduction %></td></tr>
   <tr> <th>価格</th>
    <td><%= t.text_field :price %></td></tr>
   <tr> <th>販売ステータス</th>
    <td><%= t.label :is_active,'販売中', value: true %>
<%= t.radio_button :is_active, :true %>
<%= t.label :is_active, '販売停止中', value: false %>
<%= t.radio_button :is_active, :false %></td></tr>
  </tr>
</table>

<%= t.submit'更新' %>
<% end %>