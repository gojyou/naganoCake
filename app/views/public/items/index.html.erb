<h1>商品一覧</h1>
<div class="item_index">
  <% @items.each do |item| %>

    <div class="item_index">
      <div>
        <%= link_to public_item_path(item) do %>
          <%= attachment_image_tag item, :image,:fill, 100, 100, format:'jpg' %>
        <% end %></br>
        商品名<%= item.name %>
        価格￥<%= item.price %>

      </div>
    </div>
  <% end %>
</div>
