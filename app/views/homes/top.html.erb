  <h2>新着商品</h2>
<% @items.each do |item| %>
<div class='new_item'>
  <p><%= link_to public_item_path(item) do %>
          <%= attachment_image_tag item, :image,:fill, 100, 100, format:'jpg' %>
        <% end %></p>
<p>商品名<%= item.name %></p>
<p>価格￥<%= item.price %></p>
<p>ジャンル  <%= item.genre.name %></p>
<p>販売ステータス<%= item.is_active %></p>
<%= link_to '詳細',public_item_path(item) %></div>
<% end %>


